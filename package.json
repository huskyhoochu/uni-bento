{
  "name": "uni-bento",
  "version": "0.0.2",
  "description": "Universal Unicode Table Printer",
  "main": "./src/index.js",
  "repository": "https://github.com/huskyhoochu/uni-bento.git",
  "author": "huskyhoochu",
  "license": "MIT",
  "scripts": {
    "start": "node ./src/index.js",
    "prettier": "prettier --write"
  },
  "bin": {
    "uni-bento": "./bin/uni-bento.js"
  },
  "lint-staged": {
    "linters": {
      "{src,bin}/**/*.{js,ts}": [
        "yarn prettier",
        "git add"
      ],
      "*.{md,json,yml}": [
        "yarn prettier",
        "git add"
      ]
    },
    "ignore": [
      "./node_modules/**/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "1.16.4"
  }
}
